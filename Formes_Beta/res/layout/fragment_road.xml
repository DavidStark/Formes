<!-- Stretch some columns -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="16dp"
            android:stretchColumns="1" >

            <TableRow android:paddingTop="16dp" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:paddingLeft="8dp"
                    android:text="Presence of roads"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/holo_green_dark"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spPresenceOfRoads"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/electricityAvailability"
                    android:paddingBottom="16dp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:paddingLeft="8dp"
                    android:paddingTop="16dp"
                    android:text="Type of roads within the settlement"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/holo_green_dark"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spTypeOfRoadsInSettlement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/drainTypes"
                    android:paddingBottom="16dp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:paddingLeft="8dp"
                    android:paddingTop="16dp"
                    android:text="Coverage of roads across the settlement"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/holo_green_dark"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spRoadsAcrossSettlement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/coverageOfPMCSewer"
                    android:paddingBottom="16dp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:paddingLeft="8dp"
                    android:paddingTop="16dp"
                    android:text="Finish of roads"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/holo_green_dark"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spFinishOfRoads"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/finishOfRoads"
                    android:paddingBottom="16dp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:paddingLeft="8dp"
                    android:paddingTop="16dp"
                    android:text="Average width of internal roads, bye lanes"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/holo_green_dark"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spWidthOfRoads"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/widthOfRoads"
                    android:paddingBottom="16dp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:paddingLeft="8dp"
                    android:paddingTop="16dp"
                    android:text="Average width of arterial roads"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/holo_green_dark"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spAvgWidthArterialRoads"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/avgWidthArterialRoads"
                    android:paddingBottom="16dp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:paddingLeft="8dp"
                    android:paddingTop="16dp"
                    android:text="Points of vehicular access to the slum"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/holo_green_dark"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spVehicularAccess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/pointsOfVehicularAccess"
                    android:paddingBottom="16dp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:paddingLeft="8dp"
                    android:paddingTop="16dp"
                    android:text="Settlement below or above the main road"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/holo_green_dark"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spSettlementBelowOrAbove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/settlementBelowOrAbove"
                    android:paddingBottom="16dp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:paddingLeft="8dp"
                    android:paddingTop="16dp"
                    android:text="Huts below or above the internal access road"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/holo_green_dark"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spHutsBelowOrAbove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/settlementBelowOrAbove"
                    android:paddingBottom="16dp" />
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:paddingLeft="8dp"
            android:paddingTop="16dp"
            android:text="Comments"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:paddingBottom="16dp" >
        </EditText>
    </LinearLayout>

</ScrollView>